<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with NO ACTION BAR -->
    <style name="Base.Theme.Project_Verbal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSurface">#000000</item>
    </style>

    <!-- MAIN APP THEME -->
    <style name="Theme.Project_Verbal" parent="Base.Theme.Project_Verbal">
        <!-- FIX toolbar + menu text colors -->
        <item name="actionOverflowMenuStyle">@style/Widget.AppCompat.PopupMenu</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog</item>
        <!-- Correct text color for toolbar/menu ONLY -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>

        <!-- Global button colors -->
        <item name="materialButtonStyle">@style/Widget.ProjectVerbal.ColoredButton</item>

    </style>

    <style name="Widget.ProjectVerbal.ColoredButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#2196F3</item> <!-- Blue button -->
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Theme.Project_Verbal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Project_Verbal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Splash screen theme -->
    <style name="Theme.Project_Verbal.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/project_verbal_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Project_Verbal</item>
    </style>

</resources>
