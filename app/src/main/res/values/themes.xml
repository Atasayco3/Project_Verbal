<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project_Verbal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSurface">#000000</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Project_Verbal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Project_Verbal" parent="Base.Theme.Project_Verbal" />
    <style name="Theme.Project_Verbal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Project_Verbal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#D8D7D7</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/project_verbal_splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.Project_Verbal</item>
    </style>
</resources>