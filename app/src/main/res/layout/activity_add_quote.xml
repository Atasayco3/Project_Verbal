<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddQuoteActivity"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/quote_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:text="ADDING QUOTE"
        android:textStyle="bold"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Phrase"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/quote_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etMeaning" />

    <EditText
        android:id="@+id/etMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Meaning"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/quote_header"
        app:layout_constraintStart_toEndOf="@id/etPhrase"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etEmotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Emotion"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPhrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etCertainty" />
    <EditText
        android:id="@+id/etCertainty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Certainty"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etMeaning"
        app:layout_constraintStart_toEndOf="@id/etEmotion"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD QUOTE"
        app:layout_constraintTop_toBottomOf="@id/etEmotion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>